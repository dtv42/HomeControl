{
  "AppSettings": {
    "RtuMaster": {
      "SerialPort": "COM1",
      "Baudrate": 19200,
      "ReadTimeout": 10000,
      "WriteTimeout": 10000
    },
    "RtuSlave": {
      "ID": 1
    },
    "Swagger": {
      "Info": {
        "Title": "NModbusRTU Web API",
        "Description": "This is a web gateway service for Modbus RTU slave devices.",
        "TermsOfService": "/Terms",
        "Contact": {
          "Name": "Dr. Peter Trimmel",
          "Email": "peter.trimmel@live.com",
          "Url": "http://dtv-online.net"
        },
        "License": {
          "Name": "Use under the MIT license",
          "Url": "https://opensource.org/licenses/MIT/"
        }
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=NModbusRTU.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}",
          "pathFormat": "Logs\\log-{Date}.log",
          "retainedFileCountLimit": 10
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
